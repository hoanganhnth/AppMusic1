<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppMusicTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fav_playlist_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fav_playlist_color</item>
        <item name="colorSecondaryVariant">@color/fav_playlist_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/item_bg_color</item>
        <item name="colorAccent">@color/fav_playlist_color</item>
<!--        <item name="android:textColor">@color/textColor</item>-->


        <!-- Customize your theme here. -->
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/name_size</item> <!-- Set your desired text size here -->
        <item name="android:textStyle">normal</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AppTheme.Song" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the status bar color -->
        <item name="android:statusBarColor">@color/fav_song_color</item>
    </style>

    <style name="AppTheme.Playlist" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the status bar color -->
        <item name="android:statusBarColor">@color/fav_playlist_color</item>
        <item name="colorAccent">@color/fav_playlist_color</item>
    </style>

    <style name="AppTheme.Album" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the status bar color -->
        <item name="android:statusBarColor">@color/fav_album_color</item>
    </style>

    <style name="AppTheme.Author" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the status bar color -->
        <item name="android:statusBarColor">@color/fav_author_color</item>
    </style>
    <style name="rounded_corner">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/fav_playlist_color</item>
        <item name="android:width">2dp</item>
    </style>
</resources>