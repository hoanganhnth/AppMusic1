<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp">



    <RelativeLayout
        android:id="@+id/showMoreAlbumRl"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:gravity="center"
        android:visibility="visible"
        android:layout_marginEnd="15dp"

        >
        <ImageButton
            android:id="@+id/showMoreAlbumIb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_show_more"
            android:elevation="5dp"
            android:src="@drawable/ic_show_more"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/showMoreAlbumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/showMoreAlbumIb"
            android:text="@string/show_more_tittle"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>

</RelativeLayout>