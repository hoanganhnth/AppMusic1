<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/shape_dialog_2">
    <TextView
        android:id="@+id/titleDialogDeleteTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/contentDialogTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_below="@id/titleDialogDeleteTv"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/contentDialogTv"
        android:background="@drawable/shape_button3"
        android:text="XÓA"
        android:textStyle="bold"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HỦY"
        android:textSize="15sp"
        android:textColor="@color/fav_playlist_color"
        android:textStyle="bold"
        android:layout_below="@+id/submitBtn"
        android:gravity="center"
        android:padding="10dp"
        />
</RelativeLayout>