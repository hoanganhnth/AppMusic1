<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <RelativeLayout
        android:id="@+id/songRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/imgDlIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/music_player_icon"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgDlIv"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/nameSongTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/authorSongTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"

                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayBt"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:id="@+id/addPlaySongsLn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_playlist_play"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm vào danh sách phát"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/addPlayNextLn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_play_next"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phát kế tiếp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/addFavLn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_library"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm vào thư viện"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>