<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playlistSugRl"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/playlistSugTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist gợi ý"
            android:textColor="@color/textColor"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/playlistSugTv"
            android:src="@drawable/ic_see_all"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlistSugRl"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playlistSuggestRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_playlist_suggest"
                />
            <RelativeLayout
                android:id="@+id/showMorePlaylistRl"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                >
                <ImageButton
                    android:id="@+id/showMoreIb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_show_more"
                    android:elevation="5dp"
                    android:src="@drawable/ic_show_more"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/showMoreTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/showMoreIb"
                    android:text="@string/show_more_tittle"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"

                    />
            </RelativeLayout>
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>